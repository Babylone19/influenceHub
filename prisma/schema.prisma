generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // Garde tes secrets dans .env
}

// Modèle Utilisateur (pour l'authentification)
model Utilisateur {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  motDePasse  String   
  nom         String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Modèle Influenceur (cœur de ton application)
model Influenceur {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  nom        String    @unique   
  reseau     String?             
  followers  Int?                
  pays       String              
  categorie  String              
  bio        String?
  lien       String?
  avatar     String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}